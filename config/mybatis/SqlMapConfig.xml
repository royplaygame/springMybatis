<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 别名的配置 -->
	<typeAliases>
		<!-- 批量定义别名，别名的名称默认是类名首字母小写 -->
		<package name="com.hy.ly.po" />
	</typeAliases>
	
	<mappers>
		<mapper resource="sqlmap/UserInfo.xml" />
		<!-- 包扫描，在Mapper包下面的mapper.java和mapper.xml名称要保持一致，如果使用了mapper的批量扫描，这个配置可以不用配置 -->
		<!-- <package name="com.hy.ly.mapper"/> -->
	</mappers>
</configuration>